# EditorConfig - works with most IDEs (VS Code, WebStorm, Vim, etc.)
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript and JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# Styles
[*.{css,scss,sass}]
indent_size = 2

# JSON and config files
[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

